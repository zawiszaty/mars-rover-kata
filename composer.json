{
    "name": "patrykwozinski/php-kata",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Patryk Wozi≈Ñski",
            "email": "patryk.wozinski@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kata\\": "src/Kata/"
        },
        "psr-0": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Kata\\": "tests/Kata"
        }
    },
    "require": {
        "myclabs/php-enum": "^1.7"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.15",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^0.11.2",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "phpstan/phpstan-phpunit": "^0.11.2",
        "localheinz/phpstan-rules": "^0.11.0",
        "friendsofphp/php-cs-fixer": "2.16.3",
        "phpunit/phpunit": "^7.5",
        "vimeo/psalm": "^3.13",
        "infection/infection": "^0.16.4"
    },
    "scripts": {
        "tests": [
            "./vendor/bin/phpunit"
        ],
        "quality:phpstan": [
            "./vendor/bin/phpstan analyse"
        ],
        "quality:psalm": [
            "./vendor/bin/psalm"
        ],
        "quality:infection": [
            "./vendor/bin/infection"
        ],
        "quality:cs:dry": [
            "./vendor/bin/php-cs-fixer --no-interaction --diff --dry-run -v fix"
        ],
        "quality:cs:fix": [
            "./vendor/bin/php-cs-fixer --no-interaction --diff -v fix"
        ],
        "quality:check": [
            "@quality:cs:dry",
            "@quality:phpstan",
            "@quality:psalm"
        ]
    }
}
